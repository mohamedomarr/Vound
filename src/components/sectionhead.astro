---
const { align = "center" } = Astro.props;
import "/src/styles/global.css";
---

<div class:list={["mt-16", align === "center" && "text-center"]}>
  <h1 class="text-white text-4xl lg:text-5xl font-bold lg:tracking-tight font-angus">
    <slot name="title">Title</slot>
  </h1>
  <p class="text-white text-lg mt-4 text-slate-600 font-ibmPlexMono">
    <slot name="desc">Some description goes here</slot>
  </p>
</div>
